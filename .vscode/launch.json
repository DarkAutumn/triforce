    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run - overworld",
            "type": "debugpy",
            "request": "launch",
            "python": "${workspaceFolder}/.venv/bin/python",
            "program": "run.py",
            "args": ["overworld", "game-start"],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Run - dungeon1",
            "type": "debugpy",
            "request": "launch",
            "python": "${workspaceFolder}/.venv/bin/python",
            "program": "run.py",
            "args": ["dungeon", "dungeon1"],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Train - Overworld - Dungeon 1",
            "type": "debugpy",
            "request": "launch",
            "python": "${workspaceFolder}/.venv/bin/python",
            "program": "train.py",
            "args": ["overworld", "game-start", "--output", "training/debug/"],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Train - Overworld Room Walk",
            "type": "debugpy",
            "request": "launch",
            "python": "${workspaceFolder}/.venv/bin/python",
            "program": "train.py",
            "args": ["overworld", "initial-room-walk", "--output", "training/debug/"],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Train - Sword Pickup",
            "type": "debugpy",
            "request": "launch",
            "python": "${workspaceFolder}/.venv/bin/python",
            "program": "train.py",
            "args": ["overworld-sword", "overworld-sword", "--output", "training/debug/"],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Evaluate",
            "type": "debugpy",
            "request": "launch",
            "python": "${workspaceFolder}/.venv/bin/python",
            "program": "evaluate.py",
            "args": ["training/", "overworld", "full-game", "--episodes", "50", "--steps", "249856", "1048576", "1798144", "2549760", "3348480"],
            "console": "integratedTerminal",
            "justMyCode": false
        },
    ]
}
